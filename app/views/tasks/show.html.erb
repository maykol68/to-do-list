<h1 class="text-2xl font-bold mb-4"><%= @task.title %></h1>
<p class="mb-2"><%= @task.description %></p>

<p>
  Estado:
  <% if @task.completed %>
    <span class="text-green-600 font-semibold">✅ Completada</span>
  <% else %>
    <span class="text-yellow-600 font-semibold">⏳ Pendiente</span>
  <% end %>
</p>

<div class="mt-4 flex gap-2">
  <%= link_to "Edit", edit_task_path(@task), class: "px-4 py-2 bg-yellow-500 text-white rounded" %>
  <%= link_to "Volver", tasks_path, class: "px-4 py-2 bg-gray-500 text-white rounded" %>
</div>
